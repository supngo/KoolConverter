<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
	<item> 
		<shape android:textColor="@color/text1">
			<gradient android:endColor="@color/white1" android:startColor="@color/white2" android:angle="270"/>
		</shape>
	</item>
	
	<item android:state_focused="true">
		<shape android:textColor="@color/text2">
			<gradient android:endColor="@color/white1" android:startColor="@color/white2" android:angle="270"/>
		</shape>
	</item>
	
	<item android:state_pressed="true">
		<shape android:textColor="@color/text2">
			<gradient android:endColor="@color/white1" android:startColor="@color/white2" android:angle="270"/>
		</shape>
	</item>
</selector>