<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
	<item android:state_pressed="true">
		<shape>
			<gradient android:endColor="@color/green2" android:startColor="@color/green1" android:angle="270"/>
			<stroke android:width="3dp" android:color="@color/green3"/>
			<padding android:left="5dp" android:top="0dp" android:right="5dp" android:bottom="0dp" />
			<corners android:radius="6dp" />
		</shape>
	</item>

	<item android:state_focused="true">
		<shape>
			<gradient android:endColor="@color/green2" android:startColor="@color/green1" android:angle="270"/>
			<stroke android:width="1dp" android:color="@color/green3"/>
			<padding android:left="5dp" android:top="0dp" android:right="5dp" android:bottom="0dp" />
			<corners android:radius="6dp" />
		</shape>
	</item>

	<item>
		<shape>
			<gradient android:endColor="@color/green2" android:startColor="@color/green1" android:angle="270"/>
			<stroke android:width="3dp" android:color="@color/green3"/>
			<padding android:left="5dp" android:top="0dp" android:right="5dp" android:bottom="0dp" />
			<corners android:radius="6dp" />
		</shape>
	</item>
</selector>