<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/shopping"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	xmlns:android="http://schemas.android.com/apk/res/android" android:background="@drawable/bg_2">
    	
	<TextView
	    android:id="@+id/shopping_ori_price_txt"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_marginLeft="5dp"
	    android:layout_marginTop="20dp"
	    android:text="@string/shopping_price"
	    android:textColor="@color/blue3"
	    android:textSize="23sp" >
	</TextView>
	
	<TextView
        android:id="@+id/dollar_sign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/shopping_ori_price_txt"
        android:layout_toRightOf="@+id/shopping_ori_price_txt"
        android:layout_marginLeft="10dp"
        android:text="@string/dollar_sign"
        android:textColor="@color/blue3"
        android:textSize="25sp" >
    </TextView>
	
	<EditText
	    android:id="@+id/shopping_ori_price"
	    android:layout_width="match_parent"
	    android:layout_height="40dp"
	    android:layout_alignBottom="@+id/shopping_ori_price_txt"
	    android:layout_toRightOf="@+id/dollar_sign"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="5dp"
	    android:background="@drawable/textfield1"
	    android:textColor="@color/black"
	    android:inputType="numberDecimal"
	    android:maxLength="7"
	    android:selectAllOnFocus="true"
	    android:textSize="25sp" />
	
	<TextView
	    android:id="@+id/shopping_discount_txt"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
		android:layout_below="@+id/shopping_ori_price_txt"
		android:layout_alignLeft="@+id/shopping_ori_price_txt"
		android:layout_marginTop="20dp"
	    android:text="@string/shopping_off"
	    android:textColor="@color/blue3"
	    android:textSize="23sp" />
	
	<Button
        android:id="@+id/shopping_discount_dn"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_toRightOf="@+id/shopping_discount_txt"
        android:layout_marginLeft="30dp"
        android:layout_alignBottom="@+id/shopping_discount_txt"
        android:background="@drawable/select_button"
        android:text="@string/arrow_down"
        android:textColor="@color/blue4"
        android:textSize="25sp"
        android:textStyle="bold" >
    </Button>
	
	<EditText
	    android:id="@+id/shopping_discount"
	    android:layout_width="70dp"
	    android:layout_height="40dp"
	    android:layout_toRightOf="@+id/shopping_discount_dn"
	    android:layout_alignBottom="@+id/shopping_discount_dn"
	    android:layout_marginLeft="5dp"
	    android:background="@drawable/textfield1"
	    android:inputType="number"
	    android:maxLength="5"
	    android:selectAllOnFocus="true"
	    android:text="@string/shopping_discount"
	    android:textColor="@color/black"
	    android:textSize="25sp" >
	</EditText>

	<Button
	    android:id="@+id/shopping_discount_up"
	    android:layout_width="60dp"
	    android:layout_height="40dp"
	    android:layout_toRightOf="@+id/shopping_discount"
	    android:layout_marginLeft="5dp"
	   	android:layout_alignBottom="@+id/shopping_discount_dn"
	    android:background="@drawable/select_button"
	    android:text="@string/arrow_up"
	    android:textColor="@color/blue4"
	    android:textSize="25sp"
	    android:textStyle="bold" >
	</Button>

	<TextView
	    android:id="@+id/shopping_tax_txt"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignLeft="@+id/shopping_ori_price_txt"
	     android:layout_below="@+id/shopping_discount_txt"
        android:layout_marginTop="20dp"
	    android:text="@string/shopping_tax"
	    android:textColor="@color/blue3"
	    android:textSize="23sp" >
	</TextView>
	
	<Button
	    android:id="@+id/shopping_tax_dn"
	    android:layout_width="60dp"
	    android:layout_height="40dp"
	    android:layout_alignLeft="@+id/shopping_discount_dn"
	  	 android:layout_alignBottom="@+id/shopping_tax_txt"
	    android:background="@drawable/select_button"
	    android:text="@string/arrow_down"
	    android:textColor="@color/blue4"
	    android:textSize="25sp"
	    android:textStyle="bold" >
	</Button>

	<EditText
	    android:id="@+id/shopping_tax"
	    android:layout_width="70dp"
	    android:layout_height="40dp"
	    android:layout_alignLeft="@+id/shopping_discount"
	    android:layout_alignBottom="@+id/shopping_tax_txt"
	    android:background="@drawable/textfield1"
	    android:inputType="numberDecimal"
	    android:maxLength="5"
	    android:selectAllOnFocus="true"
	    android:text="@string/shopping_taxrate"
	    android:textColor="@color/black"
	    android:textSize="25sp" >
	</EditText>

	<Button
	    android:id="@+id/shopping_tax_up"
	    android:layout_width="60dp"
	    android:layout_height="40dp"
	    android:layout_toRightOf="@+id/shopping_tax"
	    android:layout_marginLeft="5dp"
	    android:layout_alignBottom="@+id/shopping_tax_txt"
	    android:background="@drawable/select_button"
	    android:text="@string/arrow_up"
	    android:textColor="@color/blue4"
	    android:textSize="25sp"
	    android:textStyle="bold" >
	</Button>

	<TextView
	    android:id="@+id/shopping_dis"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignLeft="@+id/shopping_ori_price_txt"
	    android:layout_below="@+id/shopping_tax"
	    android:layout_marginTop="30dp"
	    android:text="@string/shopping_discount_txt"
	    android:textColor="@color/green4"
	    android:textSize="25sp" >
	</TextView>
	
	<TextView
	    android:id="@+id/shopping_dis_sign"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignLeft="@+id/dollar_sign"
	    android:layout_alignBottom="@+id/shopping_dis"
	    android:text="@string/dollar_sign"
	    android:textColor="@color/green4"
	    android:textSize="25sp" >
	</TextView>
	
	<TextView
	    android:id="@+id/shopping_dis_field"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignLeft="@+id/shopping_ori_price"
	    android:layout_alignBottom="@+id/shopping_dis"
	    android:text="@string/auto_putdown"
	    android:textColor="@color/green4"
	    android:textSize="25sp" >
	</TextView>
