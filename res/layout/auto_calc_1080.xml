        android:id="@+id/auto_interest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/auto_loan"
        android:layout_alignBottom="@+id/auto_total_interest"
        android:text="@string/auto_trade"
        android:textColor="@color/green4"
        android:textSize="26sp" >
    </TextView>
    
    <TextView
        android:id="@+id/auto_total_payment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/auto_duration_txt"
        android:layout_below="@+id/auto_total_interest"
        android:layout_marginTop="14dp"
        android:text="@string/auto_total_txt"
        android:textColor="@color/green4"
        android:textSize="25sp" >
    </TextView>

    <TextView
        android:id="@+id/auto_total_sign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/auto_total_payment"
        android:layout_alignLeft="@+id/auto_loan_sign"
        android:text="@string/dollar_sign"
        android:textColor="@color/green4"
        android:textSize="25sp" >
    </TextView>
