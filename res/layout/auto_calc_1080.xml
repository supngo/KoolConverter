        android:id="@+id/auto_monthly"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/auto_monthly_payment"
        android:layout_alignLeft="@+id/auto_loan"
        android:text="@string/auto_putdown"
        android:textColor="@color/orange3"
        android:textSize="26sp" >
    </TextView>
    
    <EditText
        android:id="@+id/auto_tax"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_alignRight="@+id/auto_loan"
        android:layout_alignBottom="@+id/auto_tax_txt"
        android:background="@drawable/textfield1"
        android:ems="10"
        android:inputType="numberDecimal"
        android:maxLength="5"
        android:selectAllOnFocus="true"
        android:text="@string/auto_tax"
        android:textColor="@color/black"
        android:textSize="25sp" />

</RelativeLayout>