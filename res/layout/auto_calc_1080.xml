	<TextView
        android:id="@+id/auto_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/auto_total_payment"
        android:layout_alignLeft="@+id/auto_loan"
        android:text="@string/auto_putdown"
        android:textColor="@color/green4"
        android:textSize="26sp" >
    </TextView>
    
    <TextView
        android:id="@+id/auto_monthly_payment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/auto_duration_txt"
        android:layout_below="@+id/auto_total_payment"
        android:layout_marginTop="14dp"
        android:text="@string/auto_monthly_txt"
        android:textColor="@color/orange3"
        android:textSize="25sp" >
