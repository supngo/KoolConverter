<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="horizontal" 
	android:layout_width="fill_parent" android:layout_height="fill_parent">
		
	<ImageView android:id="@+id/calculator_icon" android:layout_width="70dp" android:layout_height="60dp"
	    android:contentDescription="@string/main_image"/>
		
	<LinearLayout 
		android:orientation="vertical" android:layout_width="fill_parent"
		android:layout_height="wrap_content">
		
		<TextView android:layout_width="fill_parent" android:id="@+id/calculator_title"
			android:layout_height="wrap_content" android:textStyle="bold" android:textColor="@color/white0"
			android:paddingLeft="10dp" android:paddingTop="6dp" android:textSize="18sp" />
			
		<TextView android:layout_width="fill_parent" android:id="@+id/calculator_detail"
			android:layout_height="wrap_content" android:paddingLeft="10dp" android:textColor="@color/white0"
			android:textStyle="italic" android:textSize="15sp"/>
	</LinearLayout>
</LinearLayout>